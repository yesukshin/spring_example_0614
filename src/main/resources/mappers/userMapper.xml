<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.lesson04.dao.UserMapper">

	<insert id="insertUser" parameterType="map">

		INSERT INTO `new_user`
		( `name`,
	      `yyyymmdd`,
		  `email`,
		  `introduce`,
		  `createdAt`,
		  `updatedAt` )
		VALUES
		(  #{name},
		   #{yyyymmdd},
		   #{email},
		   #{introduce},
		   NOW(),
		   NOW())
	</insert>
	
	<select id = "selectLatestUser" resultType = "com.example.lesson04.domain.User">
	
	SELECT `id`, 
	       `name`,
		   `yyyymmdd`,
		   `email`,
		   `introduce`,
		   `createdAt`
		   `updatedAt`
     from  `new_user`
	 ORDER BY `id` DESC
	 LIMIT 1
	 
	</select>
    
    <select id = "existUserByName" parameterType= "string" resultType = "boolean">
    
    SELECT COUNT(1) <!-- 0:false, 0아니면 모두: true --> 
      FROM `new_user`
     WHERE `name` = #{name}
    
    </select>
</mapper>